{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=Library;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "JWT": {
    "Key": "K7REqQ+SOwd9cFHS9TOa43j1zF9D7xfb3Z9WaGJI2VE=",

    "Issuer": "LibraryAPI",
